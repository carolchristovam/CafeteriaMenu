<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/text_splash_screen"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Preparing your order"/>

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:elevation="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/text_splash_screen"
        app:layout_constraintEnd_toEndOf="@id/text_splash_screen"
        app:layout_constraintTop_toBottomOf="@id/text_splash_screen"
        android:background="@color/blue_app"/>


</androidx.constraintlayout.widget.ConstraintLayout>